{
  "name": "transparent-directories",
  "displayName": "Transparent Directories",
  "description": "Keeps only the active file's folder (or all open files) expanded in the Explorer.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Transparent Directory",
      "properties": {
        "transparentDirectories.keep": {
          "type": "string",
          "enum": [
            "active",
            "open"
          ],
          "default": "active",
          "description": "Choose 'active' to keep only the current file's folder open, or 'open' to keep all open files' folders expanded."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
